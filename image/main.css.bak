.box{
	width:100%;
	height:820px;
	background:red;
}
div#logo_main{
	background: url("top_bj.gif");
	margin: 0 auto;
	padding: 40px 0px 0px 430px;
	width: 450px;
	height: 69px;
}
#menu{
	margin: 0 auto;
	padding-top: 10px;
	width: 881px;
	text-align: center;
	color: #0000ff;
	background: #e8f3fb;
	border-bottom: solid 1px #bfdaf5;
	height: 30px;
	clear: both;
	font-size: 14px;
	font-weight: bold;
	letter-spacing: 1px;
}
#menu a{
	text-decoration: none;
}
#menu #user{
	float: left;
	margin:0 20px;
}
#menu #menu_list{
	float:right;
	height:30px;
	margin:0 20px;
}
#menu_list ul{
	float: left;
	margin: 0;
}
#menu li{
	display: inline;
}
#menu li a,#menu #user a{
	padding: 3px,5px;
	color:#0000ff;
}
a{
	color:darkblue;
}
a:hover{
	color:#ffffff;
	background: #40b7ed;
}
#content{
	width: 880px;
	margin: 0 auto;
}
#main{
	width: 520px;
	float:right;	
	border:solid 1px #bfdaf5;
}
#sidebar{
    	width:350px;
	height:430px;
	float:left;
	border:solid 1px #bfdaf5;
	padding-bottom:10px;
}
#sidebar a{
	text-decoration: none;
}
.sidesec{
	width:350px;
}
.sideform{
	width:190px;
    margin:5px 34px;
	padding:5px 15px;
	height:30px;
}
.sidesec_bt{
    margin:10px 10px 0;
    width:100px;
	font-weight:bold;
}
.banq{
	color:#999999;
	text-align:center;
	padding:8px;
	line-height:22px;
}
#leftdiv{
	float:left;
}
#rightdiv{
	float:right;
}